@model Book

<h2>Add a New Book</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter book title" />
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" placeholder="Enter author's name" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter price" />
    </div>

    <div class="form-group">
        <label asp-for="PublicationYear"></label>
        <input asp-for="PublicationYear" class="form-control" placeholder="Enter publication year" />
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-success">Save Book</button>
    </div>
</form>
