@model List<Book>

<h2>Available Books</h2>

<div class="d-flex justify-content-between align-items-center">
    <span>Manage your book collection below:</span>
    <a asp-action="Create" class="btn btn-primary">+ Add Book</a>
</div>

<table class="table table-bordered mt-3">
    <thead class="thead-light">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price (â‚±)</th>
            <th>Year</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Id</td>
                <td>@Model[i].Title</td>
                <td>@Model[i].Author</td>
                <td>@Model[i].Price</td>
                <td>@Model[i].PublicationYear</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

